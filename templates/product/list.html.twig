{% extends 'base.html.twig' %}

{% block title %}Products!{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <h2>List of Products</h2>
            <p>You can find here your products for the next week!</p>
            
            <div class="float-right">
                <a href="{{ path('create_product') }}" class="btn btn-default btn-sm">New Product</a>
            </div>
            
            <div>
                <form ation="" method="get">
                    <div class="form-group">
                        <label for="inputWeek" class="sr-only">Week</label>
                        <input type="text" name="week" id="inputWeek" class="form-control" placeholder="Week" required autofocus>
                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <table class="table table-hover table-responsive">
            <thead>
                <th>Name</th>
                <th>Variety</th>
                <th>Price</th>
                <th>Options</th>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.variety }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('edit_product', {'product': product.id}) }}" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                        <a href="{{ path('delete_product', {'product': product.id}) }}" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
