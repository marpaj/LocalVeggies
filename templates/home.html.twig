{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="container">
<h1>Welcome to Local Veggies</h1>

    {# Reading flash messages #}
    {% for message in app.flashes('message') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>
        <a href="{{ path('create_producer') }}" class="btn btn-primary" role="button">Join as a PRODUCER</a>    
    </p>

    <p>
        <a href="{{ path('create_member') }}" class="btn btn-primary" role="button">Join as a MEMBER</a>    
    </p>
    {% endif %}
</div>
{% endblock %}