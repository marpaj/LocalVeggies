{% extends 'base.html.twig' %}

{% block title %}Products!{% endblock %}

{% block body %}
    <div>
        <h2>List of products</h2>
        <a href="{{ path('create_product') }}" class="btn btn-default btn-sm">New Product</a>
    </div>

    <table class="table table-hover table-responsive">
        <thead>
            <th>Name</th>
            <th>Price</th>
            <th>Options</th>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('edit_product', {'product': product.id}) }}" class="btn btn-default btn-sm">Edit</a>
                    <a href="#" class="btn btn-default btn-sm">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
